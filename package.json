{
  "name": "sound-alerts-dev",
  "version": "0.1.2",
  "description": "Soundalerts",
  "private": true,
  "homepage": "https://github.com/psyouloveme/sound-alerts",
  "author": {
    "name": "psyouloveme",
    "email": "4607641+psyouloveme@users.noreply.github.com",
    "url": "https://psyoulove.me"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension"
  ],
  "keywords": [
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "bundleDependencies": {
      "twitch-listener": "^0.0.1"
    },
    "dashboardPanels": [
      {
        "name": "settings",
        "title": "Sound Alert Settings",
        "width": 4,
        "file": "settings/index.html",
        "headerColor": "#525F78",
        "workspace": "Sound Alerts Dev"
      },
      {
        "name": "play-counter",
        "title": "Sound Play Counter",
        "width": 3,
        "file": "play-counter/index.html",
        "headerColor": "#525F78",
        "workspace": "Sound Alerts Dev"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1280,
        "height": 720
      }
    ],
    "soundCues": [
      {
        "name": "ticket1",
        "channels": 1,
        "defaultVolume": 60,
        "assignable": false,
        "defaultFile": "sound/Ticket_1.ogg",
        "file": "sound/Ticket_1.ogg"
      },
      {
        "name": "ticket2",
        "channels": 1,
        "defaultVolume": 60,
        "assignable": false,
        "defaultFile": "sound/Ticket_2.ogg",
        "file": "sound/Ticket_2.ogg"
      },
      {
        "name": "ticket3",
        "channels": 1,
        "defaultVolume": 60,
        "assignable": false,
        "defaultFile": "sound/Ticket_3.ogg",
        "file": "sound/Ticket_3.ogg"
      }
    ]
  },
  "repository": "https://github.com/psyouloveme/sound-alerts.git",
  "license": "Apache-2.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodecg-types": "^1.9.0",
    "parcel": "^2.8.3",
    "typescript": "^5.0.4"
  },
  "targets": {
    "soundalerts": {
      "source": "./src/graphics/index.html",
      "distDir": "./graphics/",
      "context": "browser",
      "publicUrl": "./"
    },
    "dashboard-settings": {
      "source": "./src/dashboard/settings/index.html",
      "distDir": "./dashboard/settings/",
      "context": "browser",
      "publicUrl": "./"
    },
    "dashboard-playcount": {
      "source": "./src/dashboard/play-counter/index.html",
      "distDir": "./dashboard/play-counter/",
      "context": "browser",
      "publicUrl": "./"
    },
    "extension": {
      "source": "./src/extension/index.ts",
      "distDir": "./extension/",
      "context": "node",
      "publicUrl": "./"
    }
  },
  "scripts": {
    "build": "bash ./scripts/build-all.sh",
    "build-extension": "parcel build --target extension",
    "build-settings": "parcel build --target dashboard-settings",
    "build-playcount": "parcel build --target dashboard-playcount",
    "clean": "bash ./scripts/clean.sh",
    "clean-playcount": "rm -rf .parcel-cache ./dist ./dashboard/play-counter/*",
    "start-temp": "parcel serve src/temp/index.html"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "root": true
  }
}
